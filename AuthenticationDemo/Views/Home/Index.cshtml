@model AuthenticationDemo.Models.HomePageViewModel
<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <h1><a href="/home/signup">Signup</a></h1>
        
        @if (Model.IsLoggedIn)
        {
            <h1><a href="/home/secret">Secret</a>
            </h1>
            <h1><a href="/home/logout">Log out</a>
            </h1>
        }
        else
        {
            <h1>
                <a href="/home/login">Login</a>
            </h1>
        }
    </div>
</div>